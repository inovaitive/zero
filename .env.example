# ZERO Voice Assistant - Environment Variables
# Copy this file to .env and fill in your API keys

# ============================================
# Wake Word Detection (Picovoice)
# ============================================
# Get your free access key from: https://console.picovoice.ai/
PICOVOICE_ACCESS_KEY=your_picovoice_access_key_here

# ============================================
# Speech-to-Text (Deepgram)
# ============================================
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ============================================
# Natural Language Understanding (OpenAI)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Weather (OpenWeatherMap)
# ============================================
# Get your free API key from: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# ============================================
# Optional Settings
# ============================================
# Set to true to enable development mode
DEBUG=false

# Set to true to use mock APIs (for testing without API keys)
MOCK_APIS=false
